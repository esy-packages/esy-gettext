{
  "name": "esy-gettext",
  "version": "0.0.000",
  "description": "gettext packaged for esy",
  "esy": {
    "buildsInSource": true,
    "exportedEnv": {
      "LDFLAGS": {
        "scope": "global",
        "val": "-L#{self.lib} $LDFLAGS"
      },
      "CFLAGS": {
        "scope": "global",
        "val": "-I#{self.install / 'include'} $CFLAGS"
      }
    },
    "build": [
      "find ./ -exec touch -t 200905010101 {} + ",
      [
        "bash",
        "-c",
        "#{os == 'windows' ? './configure --prefix=$cur__install --host x86_64-w64-mingw32' : './configure --prefix=$cur__install'}"
      ],
      [
        "make"
      ],
      [
        "make",
        "install"
      ]
    ]
  },
  "dependencies": {
    "autoconf": "esy-packages/esy-autoconf#94f846f3ad69fc65c65a61dd7fd3d70073dc93ea",
    "automake": "esy-packages/esy-automake#0d274908e251ad6f989162f70fa497570852a684"
  }
}
